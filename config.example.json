{
  "adapters": {
    "postgresql": {
      "type": "sqlx",
      "enable": true,
      "driver": "postgres",
      "url": "host=localhost port=5432 user=postgres password=postgres dbname=db sslmode=disable",
      "database": "postgres"
    },
    "mongodb": {
      "type": "mongodb",
      "enable": true,
      "hosts": [
        "localhost:27017"
      ],
      "username": "username",
      "password": "password",
      "replica_set": "rs",
      "direct_connection": true
    },
    "arangodb": {
      "type": "arangodb",
      "enable": true,
      "servers": [
        "http://localhost:8529"
      ],
      "username": "arango",
      "password": "arango",
      "database": "arango"
    },
    "rabbitmq": {
      "type": "rabbitmq",
      "enable": true,
      "host": "localhost",
      "port": 5672,
      "username": "quest",
      "password": "quest",
      "exchange": "exchange",
      "queue": "queue",
      "listen": [
        "queue"
      ]
    },
    "custom_adapter": {
      "type": "custom",
      "enable": true,
      "host": "localhost",
      "port": 1234
    }
  },
  "workers": {
    "grpc_service": {
      "type": "grpc",
      "enable": true,
      "listen": "127.0.0.1",
      "port": 5633
    },
    "rest_service": {
      "type": "rest",
      "enable": true,
      "listen": "127.0.0.1",
      "port": 8080
    }
  }
}
